<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="arkulpa_contact_form.admin.class">
            Arkulpa\Bundle\ContactFormBundle\Admin\ArkulpaContactFormAdmin
        </parameter>
        <parameter key="arkulpa.contact.form.validator.class">Arkulpa\Bundle\ContactFormBundle\Service\FormValidator
        </parameter>
    </parameters>

    <services>
        <service id="arkulpa_contact_form.admin" class="%arkulpa_contact_form.admin.class%">
            <argument>%sulu_admin.name%</argument>
            <tag name="sulu.admin"/>
        </service>
        <service id="arkulpa.contact.form.validator"
                 class="%arkulpa.contact.form.validator.class%">
            <argument type="service" id="translator.default"/>
        </service>
    </services>
</container>

